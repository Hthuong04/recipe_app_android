<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: Hình dạng với viền và màu nền -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="#E4161515" /> <!-- Màu đỏ cho viền -->
            <corners android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Layer 2: Mũi tên xổ xuống -->
    <item android:drawable="@drawable/arrow_drop_down"
        android:gravity="end" />
</layer-list>
