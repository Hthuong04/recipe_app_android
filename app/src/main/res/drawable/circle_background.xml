<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- Màu nền cho hình tròn -->
    <solid android:color="@color/white" />

    <!-- Đường viền của hình tròn -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />

    <!-- Đặt padding bên trong nếu cần -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Kích thước tối thiểu để tạo hình tròn (chiều rộng và chiều cao bằng nhau) -->
    <size
        android:width="100dp"
        android:height="100dp" />

</shape>