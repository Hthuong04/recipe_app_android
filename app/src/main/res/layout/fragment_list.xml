<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".List">

    <LinearLayout
        android:id="@+id/content_header"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/orange"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/btnback_suggest"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginBottom="40dp"
                android:contentDescription="Logo"
                android:src="@drawable/logo"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="53dp"
                android:fontFamily="@font/holtwood_one_sc"
                android:text="COOKEASE"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/search"
            android:drawableLeft="@drawable/baseline_search_24"
            android:drawablePadding="10dp"
            android:hint="Tìm kiếm"
            android:inputType="text"
            android:paddingLeft="10dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Danh mục món ăn -->

    <ScrollView
        android:id="@+id/scrollView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/content_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Các mục danh mục -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục các món ăn"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="-5dp"/>

            <!-- Mục 1 -->
            <FrameLayout
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_list1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="Món Ăn Dinh Dưỡng"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Mục 2 -->
            <FrameLayout
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_list2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="Món Ăn Gia Đình"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Mục 3 -->
            <FrameLayout
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_list3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="Món Ăn Vặt"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Mục 4 -->
            <FrameLayout
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_list4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="Món Ăn Chay "
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Mục 5 -->
            <FrameLayout
                android:layout_width="370dp"
                android:layout_height="110dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_gravity="left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_list5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="Đồ uống"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
